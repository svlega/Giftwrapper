                    <button type="button" title="<?php echo $this->__('Apply') ?>" class="button2" onclick="giftwrapperForm.submit(false)" value="<?php echo $this->__('Apply') ?>"><span><span><?php echo $this->__('Apply') ?></span></span></button>                    
