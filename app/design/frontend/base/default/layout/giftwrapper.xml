<?xml version="1.0"?>
<layout version="0.1.0">
	
	<checkout_cart_index>	
	
	<reference name="head">
	<action method="addItem"><type>skin_css</type><name>css/giftwrapper.css</name></action>
	</reference>
	
	<reference name="checkout.cart">
	<block type="core/template" name="checkout.cart.extra" template="giftwrapper/giftwrapper.phtml" />
	</reference>
	</checkout_cart_index>	
    
	<sales_order_view>
        <reference name="order_totals">
            <block type="giftwrapper/sales_order_total" name="giftwrapper.sales.order.total" />
        </reference>
    </sales_order_view>
    <sales_order_print>
        <reference name="order_totals">
            <block type="giftwrapper/sales_order_total" name="giftwrapper.sales.order.total" />
        </reference>
    </sales_order_print>
    <sales_email_order_items>
        <reference name="order_totals">
           <block type="giftwrapper/sales_order_total" name="giftwrapper.sales.order.total" />
        </reference>
    </sales_email_order_items>

    <sales_order_invoice>
        <reference name="invoice_totals">
            <block type="giftwrapper/sales_order_total" name="giftwrapper.sales.order.total" />
        </reference>
    </sales_order_invoice>
    <sales_order_printinvoice>
        <reference name="invoice_totals">
            <block type="giftwrapper/sales_order_total" name="giftwrapper.sales.order.total" />
        </reference>
    </sales_order_printinvoice>
    <sales_email_order_invoice_items>
        <reference name="invoice_totals">
            <block type="giftwrapper/sales_order_total" name="giftwrapper.sales.order.total" />
        </reference>
    </sales_email_order_invoice_items>
	
</layout> 